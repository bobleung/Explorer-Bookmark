{
  "name": "explorer-manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/UrosVuj/Explorer-Bookmark.git"
  },
  "publisher": "UrosVujosevic",
  "displayName": "Explorer Bookmark",
  "description": "Quickly access important folders and files",
  "icon": "docs/icon.png",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "explorer",
    "folder",
    "bookmark",
    "file",
    "focus",
    "manager",
    "finder",
    "drawer",
    "git",
    "github",
    "collaboration",
    "team",
    "ai",
    "copilot",
    "diff",
    "workspace",
    "navigation",
    "productivity"
  ],
  "activationEvents": [
    "onCommand:explorer-bookmark.selectItem"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "explorer-bookmark",
        "contents": "Right click and add a file or folder.\n\nClick the + icon above to add a new section to organize your bookmarks.\n\n✨ New Features:\n• AI-powered file summaries\n• Team bookmark sharing\n• Comments and tags for bookmarks\n• Export/import bookmarks for collaboration"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "explorer-bookmark",
          "name": "Explorer Bookmark"
        }
      ]
    },
    "commands": [
      {
        "command": "directoryprovider/refreshentry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "directoryprovider/selectitem",
        "title": "Add to Explorer Bookmark"
      },
      {
        "command": "directoryprovider/selectitemtosection",
        "title": "Add to Explorer Bookmark Section..."
      },
      {
        "command": "directoryprovider/removeitem",
        "title": "Remove from Explorer Bookmark",
        "icon": "$(close)"
      },
      {
        "command": "directoryprovider/removeallitems",
        "title": "Remove All Items",
        "icon": "$(trash)"
      },
      {
        "command": "directoryprovider/cantremoveitem",
        "title": "Remove from Explorer Bookmark"
      },
      {
        "command": "directoryprovider/addsection",
        "title": "Add Section",
        "icon": "$(add)"
      },
      {
        "command": "directoryprovider/removesection",
        "title": "Remove Section",
        "icon": "$(trash)"
      },
      {
        "command": "directoryprovider/viewaisummary",
        "title": "AI Summary",
        "icon": "$(sparkle)"
      },
      {
        "command": "directoryprovider/addbookmarkcomment",
        "title": "Add Comment",
        "icon": "$(comment)"
      },
      {
        "command": "directoryprovider/addbookmarktags",
        "title": "Add Tags",
        "icon": "$(tag)"
      },
      {
        "command": "directoryprovider/showgitdiff",
        "title": "Diff tool",
        "icon": "$(git-compare)"
      },
      {
        "command": "directoryprovider/cherrypickchanges",
        "title": "Cherry-pick Changes",
        "icon": "$(git-merge)"
      },
      {
        "command": "directoryprovider/gitaddfile",
        "title": "Git: Stage File",
        "icon": "$(add)"
      },
      {
        "command": "directoryprovider/gitcommitfile",
        "title": "Git: Commit File",
        "icon": "$(git-commit)"
      },
      {
        "command": "directoryprovider/gitstashfile",
        "title": "Git: Stash File",
        "icon": "$(archive)"
      },
      {
        "command": "directoryprovider/exportteambookmarks",
        "title": "Export Team Bookmarks",
        "icon": "$(export)"
      },
      {
        "command": "directoryprovider/importteambookmarks",
        "title": "Import Team Bookmarks",
        "icon": "$(import)"
      },
      {
        "command": "directoryprovider/syncteambookmarks",
        "title": "Sync Team Bookmarks",
        "icon": "$(sync)"
      },
      {
        "command": "directoryprovider/injectteambookmarks",
        "title": "Inject Team Bookmarks",
        "icon": "$(file-code)"
      },
      {
        "command": "directoryprovider/addcomment",
        "title": "Add Comment",
        "icon": "$(comment)"
      },
      {
        "command": "directoryprovider/updatestatus",
        "title": "Update Status",
        "icon": "$(checklist)"
      },
      {
        "command": "directoryprovider/updatepriority",
        "title": "Update Priority",
        "icon": "$(flame)"
      },
      {
        "command": "directoryprovider/createpr",
        "title": "Create Pull Request",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "directoryprovider/linkpr",
        "title": "Link Pull Request",
        "icon": "$(link)"
      },
      {
        "command": "directoryprovider/showgithub",
        "title": "Show on GitHub",
        "icon": "$(github)"
      },
      {
        "command": "directoryprovider/setupgithub",
        "title": "Setup GitHub Integration",
        "icon": "$(key)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "directoryprovider/refreshentry",
          "when": "view == explorer-bookmark",
          "group": "navigation"
        },
        {
          "command": "directoryprovider/addsection",
          "when": "view == explorer-bookmark",
          "group": "navigation"
        },
        {
          "command": "directoryprovider/removeallitems",
          "when": "view == explorer-bookmark",
          "group": "navigation"
        },
        {
          "command": "directoryprovider/exportteambookmarks",
          "when": "view == explorer-bookmark",
          "group": "navigation"
        },
        {
          "command": "directoryprovider/importteambookmarks",
          "when": "view == explorer-bookmark",
          "group": "navigation"
        },
        {
          "command": "directoryprovider/syncteambookmarks",
          "when": "view == explorer-bookmark",
          "group": "navigation"
        },
        {
          "command": "directoryprovider/injectteambookmarks",
          "when": "view == explorer-bookmark",
          "group": "navigation"
        },
        {
          "command": "directoryprovider/setupgithub",
          "when": "view == explorer-bookmark",
          "group": "github"
        }
      ],
      "explorer/context": [
        {
          "command": "directoryprovider/selectitem"
        },
        {
          "command": "directoryprovider/selectitemtosection"
        }
      ],
      "view/item/context": [
        {
          "command": "directoryprovider/removeitem",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory"
        },
        {
          "command": "directoryprovider/removeitem",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "inline"
        },
        {
          "command": "directoryprovider/viewaisummary",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "ai"
        },
        {
          "command": "directoryprovider/addbookmarkcomment",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "annotations"
        },
        {
          "command": "directoryprovider/addbookmarktags",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "annotations"
        },
        {
          "command": "directoryprovider/showgitdiff",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "git"
        },
        {
          "command": "directoryprovider/cherrypickchanges",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "git"
        },
        {
          "command": "directoryprovider/gitaddfile",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "git"
        },
        {
          "command": "directoryprovider/gitcommitfile",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "git"
        },
        {
          "command": "directoryprovider/gitstashfile",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "git"
        },
        {
          "command": "directoryprovider/addcomment",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "collaboration"
        },
        {
          "command": "directoryprovider/updatestatus",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "collaboration"
        },
        {
          "command": "directoryprovider/updatepriority",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "collaboration"
        },
        {
          "command": "directoryprovider/createpr",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "github"
        },
        {
          "command": "directoryprovider/linkpr",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "github"
        },
        {
          "command": "directoryprovider/showgithub",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory",
          "group": "github"
        },
        {
          "command": "directoryprovider/addcomment",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "collaboration"
        },
        {
          "command": "directoryprovider/updatestatus",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "collaboration"
        },
        {
          "command": "directoryprovider/updatepriority",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "collaboration"
        },
        {
          "command": "directoryprovider/showgitdiff",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "git"
        },
        {
          "command": "directoryprovider/cherrypickchanges",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "git"
        },
        {
          "command": "directoryprovider/gitaddfile",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "git"
        },
        {
          "command": "directoryprovider/gitcommitfile",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "git"
        },
        {
          "command": "directoryprovider/gitstashfile",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "git"
        },
        {
          "command": "directoryprovider/createpr",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "github"
        },
        {
          "command": "directoryprovider/linkpr",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "github"
        },
        {
          "command": "directoryprovider/showgithub",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "github"
        },
        {
          "command": "directoryprovider/viewaisummary",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "ai"
        },
        {
          "command": "directoryprovider/addbookmarkcomment",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "annotations"
        },
        {
          "command": "directoryprovider/addbookmarktags",
          "when": "view == explorer-bookmark && viewItem != bookmarkSection",
          "group": "annotations"
        },
        {
          "command": "directoryprovider/removesection",
          "when": "view == explorer-bookmark && viewItem == bookmarkSection"
        },
        {
          "command": "directoryprovider/cantremoveitem",
          "when": "view == explorer-bookmark && viewItem != directlyBookmarkedDirectory && viewItem != bookmarkSection"
        }
      ]
    },
    "configuration": {
      "title": "Explorer Bookmark",
      "properties": {
        "explorer-bookmark.saveWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Save the current explorer view when closing VS Code"
        },
        "folderHub.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for PR integration and repository operations"
        },
        "folderHub.autoRefreshGitInfo": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh git information when bookmarks are accessed"
        },
        "folderHub.notificationLevel": {
          "type": "string",
          "enum": [
            "all",
            "mentions",
            "none"
          ],
          "default": "mentions",
          "description": "Level of notifications to show for collaborative activities"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^12.20.55",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "glob": "^7.2.3",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "simple-git": "^3.28.0"
  }
}