{
  "name": "explorer-manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/UrosVuj/Explorer-Bookmark.git"
  },
  "publisher": "bobleung",
  "displayName": "Quick Bookmark",
  "description": "Quickly access important folders and files. Forked from Explorer Bookmark by UrosVujosevic.",
  "icon": "docs/icon.png",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "explorer",
    "folder",
    "bookmark",
    "file",
    "focus",
    "manager",
    "finder",
    "drawer"
  ],
  "activationEvents": [
    "onCommand:explorer-bookmark.selectItem"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "explorer-bookmark",
        "contents": "Right click and add a file or folder"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "explorer-bookmark",
          "name": "Quick Bookmark"
        }
      ]
    },
    "commands": [
      {
        "command": "directoryprovider/refreshentry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "directoryprovider/selectitem",
        "title": "Add to Quick Bookmark"
      },
      {
        "command": "directoryprovider/removeitem",
        "title": "Remove from Quick Bookmark",
        "icon": "$(close)"
      },
      {
        "command": "directoryprovider/cantremoveitem",
        "title": "Remove from Quick Bookmark"
      },
      {
        "command": "directoryprovider/togglereorder",
        "title": "Toggle Edit Mode",
        "icon": "$(edit)"
      },
      {
        "command": "directoryprovider/exitreorder",
        "title": "Exit Edit Mode",
        "icon": "$(pass-filled)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "directoryprovider/togglereorder",
          "when": "view == explorer-bookmark && !explorer-bookmark.isEditMode",
          "group": "navigation@1"
        },
        {
          "command": "directoryprovider/exitreorder",
          "when": "view == explorer-bookmark && explorer-bookmark.isEditMode",
          "group": "navigation@1"
        },
        {
          "command": "directoryprovider/refreshentry",
          "when": "view == explorer-bookmark",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "directoryprovider/selectitem"
        }
      ],
      "view/item/context": [
        {
          "command": "directoryprovider/removeitem",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory && explorer-bookmark.isEditMode"
        },
        {
          "command": "directoryprovider/removeitem",
          "when": "view == explorer-bookmark && viewItem == directlyBookmarkedDirectory && explorer-bookmark.isEditMode",
          "group": "inline"
        },
        {
          "command": "directoryprovider/cantremoveitem",
          "when": "view == explorer-bookmark && viewItem != directlyBookmarkedDirectory && explorer-bookmark.isEditMode"
        }
      ]
    },
    "configuration": {
      "title": "Quick Bookmark",
      "properties": {
        "explorer-bookmark.saveWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Save the current explorer view when closing VS Code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^12.20.55",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "glob": "^7.2.3",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  }
}